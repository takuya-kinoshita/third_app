<div class="container">

  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, "name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email, "email" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

      <%= f.submit "保存", class: "btn btn-default" %>



  <% end %>

</div>
